<html>
<head>
	<title>Piano Solo Weather</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
</head>
<body>
	<nav class="navbar navbar-inverse">
        <div class="navbar-header">
            <a class="navbar-brand" href="">PianoSolo WeatherBundle</a>
        </div>
    </nav>
    <div class="container">
		<h3>Welcome To PianoSolo Weather Bundle</h3>
		<form method="post" action="{{ path('pianosolo_weather_homepage') }}">
			<input type="text" name="city" placeholder="City" value="{{ city }}" required>
			<input type="submit" value="Get Weather">
		</form>
		</br>
		{% if city is not empty %}
			{{ pianosolo_get_forecast(city,5) }}
		{% endif %}
	</div>
</body>
</html>